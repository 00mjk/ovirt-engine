<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:e="urn:import:org.ovirt.engine.ui.common.widget.editor">

	<ui:style>
		.content {
		}

		.memoryEditor,
        .descriptionEditor {
			width: 100%;
		}

		.messagePanel {
			color: #CD2127;
			margin: 5px;
            bottom: 0px;
            position: absolute;
            overflow: auto;
            max-height: 40px;
		}

        .disksPanel {
            height: 200px;
            margin: 5px;
        }

        .diskTableLabel {
            font-size: 13px;
            padding: 5px 10px 0px 5px;
            font-family: Verdana,sans-serif;
        }
	</ui:style>

	<g:FlowPanel addStyleNames="{style.content}">
		<e:EntityModelTextBoxEditor ui:field="descriptionEditor" addStyleNames="{style.descriptionEditor}" />
        <g:Label ui:field="disksTableLabel" addStyleNames="{style.diskTableLabel}" />
        <g:ScrollPanel ui:field="disksPanel" addStyleNames="{style.disksPanel}">
            <e:ListModelObjectCellTable ui:field="disksTable"/>
        </g:ScrollPanel>
        <e:EntityModelCheckBoxEditor ui:field="memoryEditor" addStyleNames="{style.memoryEditor}" />
        <g:FlowPanel ui:field="messagePanel" addStyleNames="{style.messagePanel}"/>
	</g:FlowPanel>

</ui:UiBinder>
