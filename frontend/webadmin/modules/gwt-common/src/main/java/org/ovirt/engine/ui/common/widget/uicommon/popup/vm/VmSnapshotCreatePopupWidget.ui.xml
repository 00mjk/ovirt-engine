<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:e="urn:import:org.ovirt.engine.ui.common.widget.editor">

	<ui:style>
		.content {
		}

		.descriptionEditor {
			width: 100%;
		}

		.messagePanel {
			color: #CD2127;
			margin-left: 5px;
			margin-right: 5px;
		}
	</ui:style>

	<g:VerticalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="{style.content}">
		<e:EntityModelTextBoxEditor ui:field="descriptionEditor" addStyleNames="{style.descriptionEditor}" />
		<g:FlowPanel ui:field="messagePanel" addStyleNames="{style.messagePanel}">
		</g:FlowPanel>
	</g:VerticalPanel>

</ui:UiBinder>
