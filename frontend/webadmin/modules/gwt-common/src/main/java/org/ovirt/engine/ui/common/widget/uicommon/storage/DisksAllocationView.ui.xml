<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:e="urn:import:org.ovirt.engine.ui.common.widget.editor">

	<ui:style type="org.ovirt.engine.ui.common.widget.uicommon.storage.DisksAllocationView.WidgetStyle">
		
		.content {
		}
		
		.singleStorageEditorLabel {
			display: none;
		}
		
		.singleStorageEditorContent {
			width: 180px;
		}
		
		.isSingleStorageEditorContent {
			width: 190px;
			padding: 0px;
		}
		
		.singleStorageEditor {
			float: right;
		}
		
		.singleStoragePanel {
			width: 100%;
			border-bottom: 1px solid black;
			margin-bottom: 5px;
		}
		
	</ui:style>	

	<g:FlowPanel addStyleNames="{style.content}">
		<g:HorizontalPanel addStyleNames="{style.singleStoragePanel}">
			<e:EntityModelCheckBoxEditor ui:field="isSingleStorageEditor" />
			<e:ListModelListBoxEditor ui:field="singleStorageEditor" addStyleNames="{style.singleStorageEditor}" />
		</g:HorizontalPanel>
		<g:ScrollPanel ui:field="diskListPanel"/>
	</g:FlowPanel>

</ui:UiBinder>