<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:e="urn:import:org.ovirt.engine.ui.common.widget.editor">

	<ui:style>
		.macExample {
			color: gray;
			float: right;
		}

		.errorMessageLabel {
			color: #CD2127;
			margin-top: 30px;
			width: 100%;
			text-align: center;
		}
		
		.topPanel {
			border-bottom: 1px solid black;
			width: 100%
		}
		
		.mainPanel {
			width: 100%;
		}
		
		.isPluggedEditor {
			position: absolute;
			bottom: 10px;
		}
	</ui:style>

	<g:FlowPanel>
		<g:HorizontalPanel ui:field="topPanel" addStyleNames="{style.topPanel}">
			<e:EntityModelCheckBoxEditor ui:field="attachEditor" />
		</g:HorizontalPanel>
		<g:VerticalPanel ui:field="createDiskPanel" addStyleNames="{style.mainPanel}">
			<e:EntityModelTextBoxEditor ui:field="sizeEditor" />
			<e:EntityModelTextBoxEditor ui:field="aliasEditor" />
			<e:EntityModelTextBoxEditor ui:field="descriptionEditor" />
			<e:ListModelListBoxEditor ui:field="datacenterEditor" />
			<e:ListModelListBoxEditor ui:field="storageDomainEditor" />
			<e:ListModelListBoxEditor ui:field="quotaEditor" />
			<e:ListModelListBoxEditor ui:field="interfaceEditor" />
			<e:ListModelListBoxEditor ui:field="volumeTypeEditor" />
			<e:EntityModelCheckBoxEditor ui:field="wipeAfterDeleteEditor" />
			<e:EntityModelCheckBoxEditor ui:field="isBootableEditor" />
			<e:EntityModelCheckBoxEditor ui:field="isShareableEditor" />
			<g:Label ui:field="message" addStyleNames="{style.errorMessageLabel}" />
		</g:VerticalPanel>
		<g:VerticalPanel ui:field="attachDiskPanel" addStyleNames="{style.mainPanel}" visible="false">
			<g:ScrollPanel height="300px">			
				<e:EntityModelCellTable ui:field="diskTable" />			
			</g:ScrollPanel>
			<e:EntityModelCheckBoxEditor ui:field="isPluggedEditor" addStyleNames="{style.isPluggedEditor}" />
		</g:VerticalPanel>
	</g:FlowPanel>

</ui:UiBinder>
