<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:e="urn:import:com.google.gwt.editor.ui.client">

	<ui:style>
		.snapshotsTableContainer {
			position: absolute;
			padding-right: 10px;
			padding-left: 10px;
			top: 0px;
			bottom: 0px;
			left: 0px;
			right: 50%;
		}
		
		.applicationsTableContainer {
			position: absolute;
			padding-left: 10px;
			top: 34px;
			bottom: 0px;
			left: 50%;
			right: 0px;
			overflow: auto;
		}
	</ui:style>

	<g:HorizontalPanel ui:field="mainContainer">
		<g:SimplePanel ui:field="snapshotsTableContainer" addStyleNames="{style.snapshotsTableContainer}" />
		<g:SimplePanel ui:field="applicationsTableContainer" addStyleNames="{style.applicationsTableContainer}" />
	</g:HorizontalPanel>

</ui:UiBinder>
	