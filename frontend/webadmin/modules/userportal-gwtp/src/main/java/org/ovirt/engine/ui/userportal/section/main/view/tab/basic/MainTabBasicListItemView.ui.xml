<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:i="urn:import:org.ovirt.engine.ui.userportal.section.main.view.tab.basic.widget">

	<ui:with field='resources'
		type='org.ovirt.engine.ui.userportal.ApplicationResources' />
		
	<ui:with field='itemResources'
		type='org.ovirt.engine.ui.userportal.section.main.view.tab.basic.MainTabBasicListItemResources' />

	<ui:with field='messages'
		type='org.ovirt.engine.ui.userportal.section.main.view.tab.basic.MainTabBasicListItemMessages' />

	<ui:style
		type="org.ovirt.engine.ui.userportal.section.main.view.tab.basic.MainTabBasicListItemView.Style">

		.buttonsBar {
			float: left;
		}

		.machineStatusStyle, .machineStatusSelectedStyle {
			text-align: center;
  			font-family: Arial,sans-serif;
  			font-size: 12px;
  			font-weight: bold;
		}

		.machineStatusSelectedStyle {
  			color: white;
		}
		
		.machineStatusStyle {
			color: #666666;
		}

		.vmNameStyle {
			text-align: center;
			font-family: Arial,sans-serif;
			color: #3A5F7C;
			font-size: 14px;
		}
		
		.osTypeImage {
			margin-left: 5px;
			margin-top: 5px;
		}
		
		.handCursor {
			cursor: pointer;
			cursor: hand;
		}
		
		.defaultCursor {
			cursor: default;
		}
		
		.vmUpImage {
			z-index: 1;
		}
		.vmPausedImage {
			z-index: 1;
		}
		
		.buttonsPanel {
			margin-left: 25px;
		}
		
		.consoleBannerStyle {
			background: url(images/general/tvlayout_doubleclick_to_console.png) repeat-x;
			z-index: 1;
			font-family: Arial,sans-serif;
  			color: #3A5F7C;
  			font-size: 13px;
		}
		
		.consoleBannerLabelStyle {
			margin-top: 9px;
			margin-left: 3px;		
		}
		
		.basicItemStyle {
			float: left;
			width: 170px;
			height: 200px;
		}
		
		.basicVmViewBoxStyle, .itemSelectedStyle, .itemOverStyle, .itemNotRunningStyle, .itemRunningStyle {
			border-style: solid;
			border-width: 1px;
			width: 155px;
			height: 175px;
			margin-left: 10px;
			margin-right: 10px;
		}
		
		.itemSelectedStyle {
			background-color: #3a5f7c;
		}
		
		.itemOverStyle {
  			background-color: #B5C5D7;
		}
		
		.itemNotRunningStyle {
 			background-color: #E1E1E1;
		}

		.itemRunningStyle {
			background-color: white;
		}
		
	</ui:style>


	<g:DockLayoutPanel addStyleNames="{style.basicItemStyle}">
		<g:north size="20">
			<g:Label ui:field="vmName" addStyleNames="{style.vmNameStyle}" />
		</g:north>
		<g:center>
			<g:LayoutPanel ui:field="mainContainer" addStyleNames="{style.basicVmViewBoxStyle}">
				<g:layer>
					<i:OsTypeImage ui:field="osTypeImage" addStyleNames="{style.osTypeImage}" resources="{itemResources}" nameUniquePart="Large" />
				</g:layer>
				
				<g:layer top='5px' height='120px' left='5px' width='150px'>
					<i:VmUpMaskImage ui:field="vmUpImage" addStyleNames="{style.vmUpImage}" resource='{resources.disabledMask}'/>
				</g:layer>
				
				<g:layer top='25px' height='81px' left='43px' width='73px'>
					<i:VmPausedImage ui:field="vmPausedImage" addStyleNames="{style.vmPausedImage}" resource='{resources.pausedIcon}'/>
				</g:layer>
				
				<g:layer top='55px' height='30px' left='5px' width='150px'>
					<g:SimplePanel ui:field="consoleBaner" addStyleNames="{style.consoleBannerStyle}">
						<g:Label addStyleNames="{style.consoleBannerLabelStyle}" text="{messages.doubleClickForConsole}"/>
					</g:SimplePanel>
				</g:layer>

				<g:layer top='125px' height='20px'>
					<g:ValueLabel ui:field="vmStatus" addStyleNames="{style.machineStatusStyle}" />
				</g:layer>

				<g:layer top='140px' height='40px'>
					<g:FlowPanel ui:field="buttonsPanel" addStyleNames="{style.buttonsPanel}"/>
				</g:layer>
			</g:LayoutPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>
