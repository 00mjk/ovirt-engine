<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:d="urn:import:org.ovirt.engine.ui.common.widget.dialog" xmlns:e="urn:import:org.ovirt.engine.ui.common.widget.editor"
	xmlns:w="urn:import:org.ovirt.engine.ui.common.widget.uicommon.storage">

	<ui:style>
		.content {
		}		
				
		.errorMessageLabel {
			color: #CD2127;
			margin-top: 5px;
			margin-left: 5px;
		}
				
		.isTemplatePrivateEditor {
			margin-top: 5px;
		}
		
		.disksAllocationPanel {
			width: 95%;
			float: right;
		}
		
		.disksAllocationLabel {
			padding-left: 5px;
			padding-bottom: 5px;
			padding-top: 10px;
 		}
		
	</ui:style>
	
	<d:SimpleDialogPanel width="500px" height="410px">
		<d:content>
			<g:FlowPanel>
				<e:EntityModelTextBoxEditor ui:field="nameEditor" />
				<e:EntityModelTextBoxEditor ui:field="descriptionEditor" />
				<e:ListModelListBoxEditor ui:field="clusterEditor" />
				<e:ListModelListBoxEditor ui:field="quotaEditor" />
				<g:Label ui:field="disksAllocationLabel" addStyleNames="{style.disksAllocationLabel}" />
				<w:DisksAllocationView ui:field="disksAllocationView" listHeight="135px" addStyleNames="{style.disksAllocationPanel}" />
				<g:VerticalPanel>
					<e:EntityModelCheckBoxEditor ui:field="isTemplatePrivateEditor" addStyleNames="{style.isTemplatePrivateEditor}" />
					<g:Label ui:field="message" addStyleNames="{style.errorMessageLabel}" />
				</g:VerticalPanel>
			</g:FlowPanel>
		</d:content>
	</d:SimpleDialogPanel>

</ui:UiBinder>
