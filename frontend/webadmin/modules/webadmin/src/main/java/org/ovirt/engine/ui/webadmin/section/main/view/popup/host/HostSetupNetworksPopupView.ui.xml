<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:d="urn:import:org.ovirt.engine.ui.common.widget.dialog" xmlns:e="urn:import:org.ovirt.engine.ui.webadmin.widget.editor"
	xmlns:f="urn:import:org.ovirt.engine.ui.webadmin.widget.footer" xmlns:ce="urn:import:org.ovirt.engine.ui.common.widget.editor"
	xmlns:p="urn:import:org.ovirt.engine.ui.webadmin.section.main.view.popup.host.panels">

	<ui:style type="org.ovirt.engine.ui.webadmin.section.main.view.popup.host.panels.NetworkPanelsStyle">
		.title {
			font-size: large;
			text-align: center;
		}
		
		.statusLabel {
			font-size: 15px;
			font-weight: bold;
			color: gray;
		}
		
		.itemPanel {
			border-width: 1px;
			border-style: solid;
			width: 100%;
			font-family: Arial,sans-serif !important;
			font-size: 13px !important;
			color: black;
		}
		
		.itemPanelError {
			border-color: red;
			border-width: 2px;
		}
		
		.networkGroupDragOver {
			border-color: black !important;
			box-shadow: 1px 1px 1px 1px rgba(33, 33, 33, 0.3);
		}
		
		.networkPanel {
			background-color: #FFFFFF;
			border-color: #C5C5C5;
			cursor: move;
			height: 36px;
		}
		
		.networkPanel:HOVER {
			background-color: #F6F6F6;
			box-shadow: 1px 1px 1px 1px rgba(33, 33, 33, 0.3);
		}
		
		.mgmtNetwork {
			font-weight: bold;
		}
		
		.nicPanel {
			background-color: #CED8DF;
			border-color: #7A8D9A;
			cursor: move;
			height: 27px;
		}
		
		.nicPanel:HOVER {
			background-color: #BBBBBB;
			box-shadow: 1px 1px 1px 1px rgba(33, 33, 33, 0.3);
		}
		
		.bondPanel {
			height: auto;
			background-color: #EFEFEF;
		}
		
		.bondPanel:HOVER {
			background-color: #EFEFEF;
		}
		
		.groupPanel {
			border-color: #999999;
			background-color: #F6F6F6;
			border-width: 1px;
			border-style: solid;
			width: 100%;
		}
		
		.unassignedNetworksPanel {
			border-width: 1px;
			border-style: solid;
			border-color: #999999;
			 width: 100%;
			 height: 100%;
		}

		.actionButton {
			padding: 0px;
			background: gray;
		}
		
		.networkImageBorder {
			border: 1px solid #C5C5C5;
		}
				
		.emptyPanel {
			border: 1px dashed gray;
			color: gray;
			height: 36px;
			width: 100%;
		}

		.checkCon {
			width: 370px;
			padding: 5px;
		}
	</ui:style>

	<d:SimpleDialogPanel width="900px" height="600px">
		<d:content>
			<g:HTMLPanel>
				<g:HorizontalPanel spacing="20" width="100%" height="100%" verticalAlignment="ALIGN_TOP">
					<g:Cell width="70%" height="100%">
						<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_LEFT">
							<f:StatusLabel ui:field="status" />
							<e:AnimatedVerticalPanel ui:field="nicList" width="100%" spacing="10" />
						</g:VerticalPanel>
					</g:Cell>
					<g:Cell width="30%" height="100%">
						<g:VerticalPanel width="100%" horizontalAlignment="ALIGN_LEFT">
							<g:Label text="Unassigned Logical Networks" styleName="{style.title}" />
							<p:UnassignedNetworksPanel ui:field="networkList"/>
						</g:VerticalPanel>
					</g:Cell>
				</g:HorizontalPanel>
				<g:VerticalPanel>
					<ce:EntityModelCheckBoxEditor ui:field="checkConnectivity" />
					<ce:EntityModelCheckBoxEditor ui:field="commitChanges" />
				</g:VerticalPanel>
			</g:HTMLPanel>
		</d:content>
	</d:SimpleDialogPanel>

</ui:UiBinder>
