<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:d="urn:import:org.ovirt.engine.ui.common.widget.dialog" xmlns:e="urn:import:org.ovirt.engine.ui.common.widget.editor">

	<ui:style>
		.attachDiskCheckBoxPanel {
			padding-top: 5px;
			padding-bottom: 5px;
			border-bottom: 1px solid black;
			width: 100%;
		}

		.errorMessageLabel {
			position: absolute;
			bottom: 10px;
			color: #CD2127;
			margin-top: 30px;
			width: 100%;
			text-align: center;
		}
	</ui:style>

	<d:SimpleDialogPanel width="500px" height="400px">
		<d:content>
			<g:FlowPanel>
				<g:HorizontalPanel addStyleNames="{style.attachDiskCheckBoxPanel}">
					<e:EntityModelCheckBoxEditor ui:field="attachDiskCheckBoxEditor"/>
				</g:HorizontalPanel>
				
				<g:FlowPanel ui:field="newDiskPanel">
					<e:EntityModelTextBoxEditor ui:field="sizeEditor"/>
					<e:ListModelListBoxEditor ui:field="storageDomainEditor" />
					<e:ListModelListBoxEditor ui:field="presetEditor" />
					<e:ListModelListBoxEditor ui:field="interfaceEditor" />
					<e:ListModelListBoxEditor ui:field="volumeTypeEditor" />
					<e:EntityModelCheckBoxEditor ui:field="wipeAfterDeleteEditor"/>
					<e:EntityModelCheckBoxEditor ui:field="isBootableEditor"/>					
				</g:FlowPanel>
				
				<g:FlowPanel ui:field="attachDiskPanel">
				</g:FlowPanel>
				
				<g:Label ui:field="message" addStyleNames="{style.errorMessageLabel}" />
			</g:FlowPanel>
		</d:content>
	</d:SimpleDialogPanel>

</ui:UiBinder>
