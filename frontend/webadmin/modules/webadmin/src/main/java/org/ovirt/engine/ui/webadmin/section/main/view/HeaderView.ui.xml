<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:w="urn:import:org.ovirt.engine.ui.webadmin.widget.alert"
    xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:with field='constants' type='org.ovirt.engine.ui.webadmin.ApplicationConstants' />

    <ui:style>
        @external obrand_headerLogoImage;
            .obrand_headerLogoImage {
        }

        .topLinks {
            font-size: 11px;
            cursor: pointer;
        }
    </ui:style>

    <g:HTMLPanel>
    <b:Navbar ui:field="mainNavBar" addStyleNames="navbar-pf-vertical">
        <b:NavbarHeader>
             <b:NavbarCollapseButton />
             <b:NavbarBrand ui:field="logoLink">
                <img class="{style.obrand_headerLogoImage}" src="clear.cache.gif" />
             </b:NavbarBrand>
        </b:NavbarHeader>
        <b:NavbarCollapse>
            <b:NavbarNav addStyleNames="navbar-right navbar-iconic">
                <b:AnchorListItem ui:field="tasks" icon="TASKS" />
                <w:EventsListPopover ui:field="events" />
                <b:ListDropDown>
                    <b:AnchorButton ui:field="userName" dataToggle="DROPDOWN" icon="USER" />
                    <b:DropDownMenu>
                        <b:AnchorListItem ui:field="optionsLink" addStyleNames="{style.topLinks}" />
                        <b:AnchorListItem ui:field="bookmarkLink" addStyleNames="{style.topLinks}" />
                        <b:AnchorListItem ui:field="logoutLink" addStyleNames="{style.topLinks}" />
                    </b:DropDownMenu>
                </b:ListDropDown>
                <b:ListDropDown>
                    <b:AnchorButton ui:field="help" dataToggle="DROPDOWN" icon="QUESTION_CIRCLE" />
                    <b:DropDownMenu>
                        <b:AnchorListItem ui:field="guideLink" addStyleNames="{style.topLinks}" />
                        <b:AnchorListItem ui:field="aboutLink" addStyleNames="{style.topLinks}" />
                    </b:DropDownMenu>
                </b:ListDropDown>
                <b:ListDropDown>
                    <b:AnchorButton ui:field="settings" dataToggle="DROPDOWN" icon="GEAR" />
                    <b:DropDownMenu>
                        <b:AnchorListItem ui:field="configureLink" addStyleNames="{style.topLinks}" />
                        <b:AnchorListItem ui:field="tagsLink" addStyleNames="{style.topLinks}" />
                    </b:DropDownMenu>
                </b:ListDropDown>
            </b:NavbarNav>
        </b:NavbarCollapse>
    </b:Navbar>
    <g:HTMLPanel>
        <g:FlowPanel addStyleNames="nav-pf-vertical nav-pf-vertical-with-sub-menus">
            <b:ListGroup ui:field="mainNavbarNavContainer" />
        </g:FlowPanel>
    </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
