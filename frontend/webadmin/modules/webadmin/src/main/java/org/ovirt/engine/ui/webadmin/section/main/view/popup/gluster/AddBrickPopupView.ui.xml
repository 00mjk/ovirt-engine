<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:org.ovirt.engine.ui.common.widget.dialog"
	xmlns:e="urn:import:org.ovirt.engine.ui.common.widget.editor" xmlns:w="urn:import:org.ovirt.engine.ui.common.widget">

	<ui:style>
		.countPanel {
			height: 30px;
		}
		.headerLabel {
			font-weight: bold;
			padding-bottom: 5px;
		}
		.messageLabel {
			color: #CD2127;
			position: absolute;
			top: 40px;
			left: 10px;
		}
		.tablePanel {
			height: 320px;
			width: 325px;
			border: 1px solid #CED8DF;
		}
		.brickButton table{
			width: 100%;
		}
	</ui:style>
	
	<d:SimpleDialogPanel width="900px" height="450px">
		<d:content>
			<g:VerticalPanel>
				<g:HorizontalPanel addStyleNames="{style.countPanel}">
					<e:EntityModelTextBoxEditor ui:field="replicaCountEditor"/>
					<e:EntityModelTextBoxEditor ui:field="stripeCountEditor" />
				</g:HorizontalPanel>
				<g:HorizontalPanel spacing="5" verticalAlignment="ALIGN_MIDDLE">
					<g:VerticalPanel>
						<g:Label ui:field="availableBricksHeader" addStyleNames="{style.headerLabel}"/>
						<g:ScrollPanel addStyleNames="{style.tablePanel}">
							<e:EntityModelCellTable ui:field="availableBricksTable"/>
						</g:ScrollPanel>
					</g:VerticalPanel>
					<g:VerticalPanel spacing="5" horizontalAlignment="ALIGN_CENTER">
						<w:UiCommandButton ui:field="addBricksButton" addStyleNames="{style.brickButton}"/>
						<w:UiCommandButton ui:field="removeBricksButton" addStyleNames="{style.brickButton}"/>
						<w:UiCommandButton ui:field="addAllBricksButton" addStyleNames="{style.brickButton}"/>
						<w:UiCommandButton ui:field="removeAllBricksButton" addStyleNames="{style.brickButton}"/>
					</g:VerticalPanel>
					<g:VerticalPanel>
						<g:Label ui:field="selectedBricksHeader" addStyleNames="{style.headerLabel}"/>		
						<g:ScrollPanel addStyleNames="{style.tablePanel}">
							<e:EntityModelCellTable ui:field="selectedBricksTable"/>
						</g:ScrollPanel>
					</g:VerticalPanel>
					<g:VerticalPanel spacing="5" horizontalAlignment="ALIGN_CENTER">
						<w:UiCommandButton ui:field="moveBricksUpButton" addStyleNames="{style.brickButton}"/>
						<w:UiCommandButton ui:field="moveBricksDownButton" addStyleNames="{style.brickButton}"/>
					</g:VerticalPanel>
				</g:HorizontalPanel>
				<g:Label ui:field="messageLabel" addStyleNames="{style.messageLabel}" />
			</g:VerticalPanel>
		</d:content>
	</d:SimpleDialogPanel>
	
</ui:UiBinder>