<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:org.ovirt.engine.ui.common.widget.dialog"
	xmlns:e="urn:import:org.ovirt.engine.ui.common.widget.editor">

	<ui:style type="org.ovirt.engine.ui.webadmin.section.main.view.popup.quota.QuotaPopupView.WidgetStyle">
		.textBoxWidth {
			width: 100;
			margin-right: 3px;
		}
		.topDecorator {
			background-color: #D3D3D3;
			margin-bottom: 8px;
			margin-top: 4px;
			margin-right: 3px;
			padding-top: 6px;
			padding-bottom:
			6px;
		}
		.labelStyle {
			font-weight: bold;
			padding-left: 5px;
		}
		.containerStyle {
			height: 100px;
			margin-bottom: 15px;
		}
	</ui:style>

	<d:SimpleDialogPanel width="750px" height="600px">
		<d:content>
			<g:FlowPanel>
				<g:FlowPanel addStyleNames="{style.topDecorator}">
					<g:HorizontalPanel>
						<e:EntityModelTextBoxEditor ui:field="nameEditor" />
						<e:EntityModelTextBoxEditor ui:field="descriptionEditor" />
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<e:ListModelListBoxEditor ui:field="dataCenterEditor" />
					</g:HorizontalPanel>
				</g:FlowPanel>
				<g:Label ui:field="memAndCpuLabel" addStyleNames="{style.labelStyle}"/>
				<g:HorizontalPanel>
					<e:EntityModelTextBoxEditor ui:field="graceClusterEditor" addStyleNames="{style.textBoxWidth}"/>
					<e:EntityModelTextBoxEditor ui:field="thresholdClusterEditor" addStyleNames="{style.textBoxWidth}"/>
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<e:EntityModelRadioButtonEditor ui:field="globalClusterQuotaRadioButtonEditor" />
					<e:EntityModelRadioButtonEditor ui:field="specificClusterQuotaRadioButtonEditor" />
				</g:HorizontalPanel>
				<g:ScrollPanel ui:field="clusterQuotaTableContainer" addStyleNames="{style.containerStyle}"/>
				
				<g:Label ui:field="storageLabel" addStyleNames="{style.labelStyle}"/>
				<g:HorizontalPanel>
					<e:EntityModelTextBoxEditor ui:field="graceStorageEditor" addStyleNames="{style.textBoxWidth}"/>
					<e:EntityModelTextBoxEditor ui:field="thresholdStorageEditor" addStyleNames="{style.textBoxWidth}"/>
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<e:EntityModelRadioButtonEditor ui:field="globalStorageQuotaRadioButtonEditor" />
					<e:EntityModelRadioButtonEditor ui:field="specificStorageQuotaRadioButtonEditor" />
				</g:HorizontalPanel>
				<g:ScrollPanel ui:field="storageQuotaTableContainer" addStyleNames="{style.containerStyle}"/>
		</g:FlowPanel>
		</d:content>
	</d:SimpleDialogPanel>

</ui:UiBinder>
