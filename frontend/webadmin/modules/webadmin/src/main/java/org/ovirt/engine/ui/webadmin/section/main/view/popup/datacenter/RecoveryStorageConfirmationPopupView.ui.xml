<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:d="urn:import:org.ovirt.engine.ui.webadmin.widget.dialog" xmlns:e="urn:import:org.ovirt.engine.ui.common.widget.editor" 
	xmlns:w="urn:import:org.ovirt.engine.ui.webadmin.widget.editor">

	<ui:style>
		.content {
		}

		.messages {
			margin-left: 15px;
		}

		.messageLabel {
			padding-bottom: 20px;
		}

		.selectNewDSDLabel {
			padding-top: 10px;
		}

		.warningLabel {
			padding-bottom: 20px;
			color: red;
			font-weight:bold;
		}

		.sdItemsPanel {
			width: 100%;
			height: 50%;
			border-bottom: 1px solid #BBBBBB;
			border-top: 1px solid #BBBBBB;
		}

	</ui:style>

	<d:SimpleDialogPanel width="450px" height="350px">
		<d:content>
			<g:FlowPanel addStyleNames="{style.content}">
				<g:FlowPanel addStyleNames="{style.messages}">
					<g:Label ui:field="warningLabel" addStyleNames="{style.warningLabel}"/>
					<g:HTML ui:field="messageLabel" addStyleNames="{style.messageLabel}"/>
				</g:FlowPanel>
				<e:EntityModelCheckBoxEditor ui:field="latch" visible="false" label="Approve Operation"/>
				<g:Label ui:field="selectNewDSDLabel" addStyleNames="{style.selectNewDSDLabel}"/>
				<g:ScrollPanel ui:field="sdItemsScrollPanel" addStyleNames="{style.sdItemsPanel}">
					<w:EntityModelCellTable ui:field="storageDomainItems"/>
				</g:ScrollPanel>
			</g:FlowPanel>
		</d:content>
	</d:SimpleDialogPanel>

</ui:UiBinder>
